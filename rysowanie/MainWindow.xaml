<Window x:Class="rysowanie_1s4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rysowanie_1s4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnRysuj" Content="Rysuj" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Background="#FFEC6A6A" Height="42" Width="85" Click="btnRysuj_Click"/>
        <Canvas x:Name="cvRysunek" Margin="116,10,15,11" RenderTransformOrigin="0.5,0.5" Width="300" Height="300" Background="#FFFBABAB">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.053"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>
        <Button x:Name="btnRysujKrzyżyk" Content="Rysuj krzyżyk" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Height="51" Width="86" Click="btnRysujKrzyżyk_Click"/>
        <TextBox x:Name="txtŚrodek" HorizontalAlignment="Left" Margin="10,147,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" TextChanged="txtŚrodek_TextChanged"/>
        <TextBox x:Name="txtŚrodek_Kopiuj" HorizontalAlignment="Left" Margin="10,182,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" TextChanged="txtŚrodek_TextChanged"/>
        <Button x:Name="btnRysujDrzewo" Content="Rysuj drzewo" HorizontalAlignment="Left" Margin="10,229,0,0" VerticalAlignment="Top" Height="46" Width="100" Click="btnRysujDrzewo_Click"/>
        <TextBox x:Name="txtPromień" HorizontalAlignment="Left" Margin="10,292,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
