        <Button x:Name="btnKula" Content="Kula" HorizontalAlignment="Left" Margin="319,328,0,0" VerticalAlignment="Top" Click="btnKula_Click" Height="51" Width="132"/>
        <Button x:Name="btnStożek" Content="Stożek" HorizontalAlignment="Left" Margin="560,328,0,0" VerticalAlignment="Top" Click="btnStożek_Click" Height="51" Width="122"/>
        <Button x:Name="btnStudent" Content="Student" HorizontalAlignment="Left" Margin="435,399,0,0" VerticalAlignment="Top" Height="22" Width="148" Click="btnStudent_Click" RenderTransformOrigin="0.5,0.5"/>
