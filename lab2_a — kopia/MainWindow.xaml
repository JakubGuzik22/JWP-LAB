<Window x:Class="lab2_a.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2_a"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="215*"/>
            <RowDefinition Height="219*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtLiczba1" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="205"/>
        <TextBox x:Name="txtLiczba2" HorizontalAlignment="Left" Margin="10,33,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="205"/>
        <Button x:Name="btnIloczyn" Content="Iloczyn" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.326,0.441" Width="205" Click="btnIloczyn_Click"/>
        <Label x:Name="lblWynik" Content="Wynik mnożenia liczb:" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top" Width="205"/>
        <Label x:Name="lblKwadrat" Content="Kwadrat pierwszej liczby:" HorizontalAlignment="Left" Margin="10,112,0,0" VerticalAlignment="Top" Width="205"/>
        <Label x:Name="lblKoło" Content="Pole koła:&#xD;&#xA;" HorizontalAlignment="Left" Margin="10,143,0,0" VerticalAlignment="Top" Width="205" Height="50"/>
        <Label x:Name="lblWalec" Content="Objętość walca wynosi:" HorizontalAlignment="Left" Margin="10,198,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.29,0.682" Width="205" Grid.RowSpan="2"/>
        <Label x:Name="lblWalec2" Content="Objętość walca wynosi:" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.29,0.682" Width="205" Grid.Row="1"/>
        <ListBox x:Name="lbxTest" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.RowSpan="2" Margin="239,10,10,77"/>
        <Button x:Name="btnTest1" Content="Test1" HorizontalAlignment="Left" Margin="10,189,0,0" Grid.Row="1" VerticalAlignment="Top" Width="205" Click="btnTest1_Click"/>

    </Grid>
</Window>
